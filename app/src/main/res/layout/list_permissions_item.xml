<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:clickable="true"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="9dp"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <LinearLayout
                android:id="@+id/permissions_IMG_user"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#3D4F71"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/permission_IMG_isrisky"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ok">

                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/permissions_TXT_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permission name"
                    android:textStyle="bold"
                    android:textColor="#5A5A5A"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/permissions_TXT_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Please consider removing this permission."
                    android:textColor="#C66666"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:textStyle="bold" />
            </LinearLayout>



        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/job_IMG_image"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:layout_alignBottom="@id/card"
        android:layout_marginStart="10dp"
        android:elevation="10dp"
        android:padding="4dp"
        android:scaleType="fitCenter" />

</RelativeLayout>